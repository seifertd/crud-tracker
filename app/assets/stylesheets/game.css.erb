.player_list ul {
  list-style: none;
  margin: 0;
  padding: 0;
  border-bottom: 1px solid blue;
}
.player_list ul li {
  padding-left: 5px;
  padding-right: 5px;
  border-width: 1px 1px 0 1px;
  border-style: solid;
  border-color: blue;
  line-height: 35px;
}
.player_list ul li:nth-child(odd) {
  background-color: #eee; 
}
.player_list ul li:nth-child(even) {
  background-color: #ddd; 
}
.player_list ul li:hover {
  background-color: yellow;
}
.player_list .actions {
  margin-top: 20px;
}

/* Crud Game */
.crud_game {
  width: 330px;
}
.crud_game table tr {
  height: 45px;
  line-height: 45px;
}
.crud_game table tr td.strikes {
  padding-left: 10px;
}
.crud_game table tr td.strikes button.strike {
  background-image: url("<%= asset_url "strike.gif" %>");
  width: 30px;
  height: 30px;
  margin-right: 3px;
}

.crud_game table tr:nth-child(odd) td {
  background-color: #eee; 
}
.crud_game table tr:nth-child(even) td {
  background-color: #ddd; 
}
.crud_game table tr td.strikes:hover  {
  background-color: yellow;
  cursor: pointer;
}
.crud_game table tr[data-alive="false"] td {
  background-color: pink !important;
  text-decoration: line-through !important;
}
.crud_game table tr[data-alive="false"] td.strikes:hover {
}

/* Game List */
ol.last {
  display: block;
  padding-left: 20px;
}
li.last {
  display: block;
}
li.last:before {
  content: "L. ";
}

/* Leader board */
@media screen only and (max-device-width: 700px) {
  .leader-board table, thead, tbody, th, td, tr {
      display: block;
    }
  .leader-board thead tr {
    position: absolute;
    top: -9999px;
    left: -9999px;
  }
  .leader-board tr {
    border: 1px solid #ccc;
  }
  .leader-board td {
    border: none;
    border-bottom: 1px solid #eee;
    position: relative;
    padding-left: 50%;
  }
  .leader-board td:before {
    position: absolute;
    top: 6px;
    left: 6px;
    width: 45%;
    padding-right: 10px;
    white-space: nowrap;
  }
  .leader-board td:nth-of-type(1):before { content: "FOO"; }
}
