<p id="notice"><%= notice %></p>
<h3>Vitals</h3>
<p>
  <b>Name:</b>
  <%= @player.name %>
  <br/>
  <b>Nickname:</b>
  <%= @player.nickname %>
  <br/>
  <b>Points:</b>
  <%= @player.points %>
  <br/>
  <b>Bonus Points:</b>
  <%= @player.bonus_points %>
</p>
<h3>Game History (Last 20 Only)</h3>
<table id="leader_board" border="1">
  <tr class="header"><th>Date</th><th>Place</th><th>Points</th><th>Bonus</th></tr>
<%# @player.entrants.order('created_at desc').limit(20).each do |entry| -%>
<% @player.entrants.order('created_at desc').each do |entry| -%>
  <tr><td><%=entry.game.created_at.to_date.to_formatted_s(:short)%></td><td><%=entry.final_position.ordinal%> of <%=entry.game.entrants.size%></td><td><%=entry.score%></td><td><%=entry.bonus_score%></tr>
<% end %>
</table>

<%= link_to 'Edit', edit_player_path(@player) %> |
